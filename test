#!/bin/bash

set -e # exit on any error

if [[ -e "library/LibraryTest" ]]; then 
  rm library/libraryTest 
fi
pushd library
if [[ ! -e "Makefile" ]]; then
  cmake -DEXT_PREFIX=${EXT_PREFIX} .
fi
make
popd
pushd libraryTest
if [[ ! -e "Makefile" ]]; then
  cmake -DEXT_PREFIX=${EXT_PREFIX} .
fi
make
./libraryTest "$@"
